archetype sig_challenge

asset challenge {
  id : string;
  addr : address;
  solved : bool = false;
}

entry emit (c_id : string, addr_ : address) {
  effect {
    challenge.add({id = c_id; addr = addr_})
  }
}

entry resolve (c_id : string) {
  require {
    r1: challenge[c_id].addr = caller;
  }
  effect {
    challenge.update(c_id, {solved = true})
  }
}
