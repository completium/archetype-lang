archetype auction_no_memory

variable bid tez = 0
variable incumbent address

variable deadline date = 2019-01-01T00:00:00

action place_bid (id : address) (b : tez) = {
   require {
      c1 : now < deadline;
      c2 : b > bid
   }

   effect {
      incumbent = caller;
      bid = transferred
   }
}
