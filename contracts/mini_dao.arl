archetype mini_dao

asset shares identified by addr {
  addr : address;
  value : tez
}

entry withdraw () {
  require {
    r0 : shares.contains(caller);
    r1 : shares[caller].value > 0tz;
    r2 : balance >= shares[caller].value;
  }
  effect {
    var v = shares[caller].value;
    transfer v to caller;
    shares.update (caller, { value = 0tz })
  }
}
