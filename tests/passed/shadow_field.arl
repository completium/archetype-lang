archetype shadow_field

asset myasset {
  id: string;
} shadow {
  s: int = 0;
} with {
  a1: s >= 0
}

action main (k : pkey of myasset) {
  specification {
    effect {
      myasset.update(k, {s += 1});
      m.s += 1
    }
    postcondition s1 {
      forall a in myasset, a.s = 2
    }
    postcondition s2 {
      m.s = 2
    }
  }
  failif {
    f1: not (myasset.contains(k));
  }
  effect {
    var m : myasset = {id = k};
    myasset.add(m)
  }
}

specification {
  s1: forall m in myasset, m.s = 0
}
