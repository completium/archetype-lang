archetype shadow_field

asset myasset {
  id: string;
} shadow {
  s: int = 0;
} with {
  a1: s >= 0
}

entry exec (k : asset_key<myasset>) {
  specification {
    shadow effect {
      myasset.update(k, {s += 1});
    }
    postcondition s1 {
      forall a in myasset, a.s = 2
    }
  }
  failif {
    f1: not (myasset.contains(k));
  }
  effect {
    myasset.add({id = k})
  }
}

specification {
  s1: forall m in myasset, m.s = 0
}
