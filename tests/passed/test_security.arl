archetype test_security

variable admin : role = @tz1aazS5ms5cbGkb6FN1wvWmN7yrMTTcr6wB
variable i : int = 0

asset myasset {
  id : string;
}

action exec () {
  effect {
    i := 1
  }
}

security {
  g1 : only_by_role (anyaction, admin);
  g2 : only_in_action (remove (myasset), [exec or exec]);
  g3 : not_in_action (add (myasset), exec);
  g4 : no_storage_fail (exec);
}
