archetype assign_field

asset myasset identified by id {
  id : int;
  str : string;
} initialized by {
  {0; ""}
}

entry exec () {
  specification {
    s0: let some v = myasset[0] in v.str = "mystr" otherwise false;
  }
  effect {
    myasset[0].str := "mystr";
    dorequire (myasset[0].str = "mystr")
  }
}
