    forall c : container, i j : int.
    i < j -> partial_sum c i j = partial_sum c i (j-1) + f c (j-1)

  lemma Sum_transitivity :
    forall c : container, i k j : int. i <= k <= j ->
    partial_sum c i j = partial_sum c i k + partial_sum c k j

